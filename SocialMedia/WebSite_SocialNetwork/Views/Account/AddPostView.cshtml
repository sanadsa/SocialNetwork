@model WebSite_SocialNetwork.Models.UploadPost

@{
    ViewBag.Title = "AddPostView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("AddNewPost", "Account", FormMethod.Post))
{
    <div class="form-horizontal">
        <h4>Post</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-conrol-file">
            <label class="col-md-10">
                Picture 1:
                @Html.TextBoxFor(model => model.Image, new { type = "file", name = "Files" })
            </label>
        </div>
        @if (ViewBag.Following != null)
        {
            <div class="form-conrol-file">
                <label class="col-md-10">
                    Tag your frinds:
                    @Html.DropDownList("Tag", (SelectList)ViewBag.Following, new { id = "myDropBox"})
                    @Html.TextBoxFor(m => m.Tags, htmlAttributes: new { id = "myInput" })
                    <input type="submit" value="Search" />
                </label>
            </div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="buttonT" />
            </div>
        </div>
    </div>
}
<script>
    $(document).ready(function(){
      $("#myInput").on("keyup", function() {
        var value = $(this).val().toLowerCase();
          $("#myDropBox").filter(function() {
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
      });
    });
</script>