@model WebSite_SocialNetwork.Models.User
@{
    ViewBag.Title = "Wall";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:30px">
    @Html.Partial("_IdentityPartial")
        @if (Model.Posts != null)
        {
            foreach (var p in Model.Posts)
            {
                <div class="col-sm-8">
                    <div>
                        <h2>@p.Username</h2>
                        <h5>@p.PostDate</h5>
                        <img src="~/App_Data/Images/Free-Download-Pink-Floyd-Wallpapers-HD.jpg" width="100" height="75" />
                        <p>@p.Text</p>
                        <p>@p.Tags</p>
                    </div>
                </div>
            }
        }
    </div>
</div>

<div class="jumbotron text-center" style="margin-bottom:0">
    <p>Footer</p>
</div>


